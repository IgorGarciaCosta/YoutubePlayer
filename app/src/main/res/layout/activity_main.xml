<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/idCd"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/ytPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.google.android.youtube.player.YouTubePlayerView>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnPlaySingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play a single video"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10sp"
        app:layout_constraintTop_toBottomOf="@+id/idCd" />

    <Button
        android:id="@+id/btnStandAlone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand alone sub menu"
        app:layout_constraintStart_toStartOf="@+id/btnPlaySingle"
        app:layout_constraintTop_toBottomOf="@+id/btnPlaySingle" />

</androidx.constraintlayout.widget.ConstraintLayout>